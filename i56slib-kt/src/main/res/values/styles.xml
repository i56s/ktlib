<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--透明背景dialog样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SwitchButton">
        <item name="openColor">#32D8D2</item>
        <item name="openCircleColor">#FFFFFF</item>
        <item name="openCircleStrokeColor">#2CBCB7</item>
        <item name="closeColor">#DFDFDF</item>
        <item name="closeCircleColor">#FFFFFF</item>
        <item name="closeStrokeColor">#E3E3E3</item>
        <item name="closeCircleStrokeColor">#BFBFBF</item>
        <item name="disableColor">#BFBFBF</item>
        <item name="disableCircleColor">#FFFFFF</item>
        <item name="shadowCircleColor">#333333</item>
    </style>

    <style name="IndicatorView">
        <item name="indicatorRadius">@dimen/dp_6</item>
        <item name="indicatorBorderWidth">@dimen/dp_2</item>
        <item name="indicatorSpace">@dimen/dp_5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="indicatorSelectColor">@android:color/white</item>
        <item name="indicatorColor">@android:color/darker_gray</item>
        <item name="indicatorFillMode">none</item>
    </style>

    <!--标题栏默认样式-->
    <style name="TitleView">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:height">@dimen/dp_50</item>
        <item name="android:background">#4baefe</item>
        <item name="backDrawable">@drawable/ic_title_view_back</item>
    </style>

    <!--进度条控件默认样式-->
    <style name="ProgressView">
        <item name="android:orientation">horizontal</item>
        <item name="android:max">100</item>
        <item name="isDraggable">true</item>
        <item name="progressBackgroundColor">#4b4a56</item>
        <item name="progressColor">#00d7f2</item>
        <item name="progressWidth">@dimen/dp_10</item>
        <item name="android:thumb">@drawable/progress_thumb</item>
    </style>
</resources>