<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标题控件-->
    <declare-styleable name="TitleView">
        <!--标题高度-->
        <attr name="tvHeight" format="dimension" />
        <!--标题文字-->
        <attr name="tvTitle" format="string" />
        <!--标题文字颜色-->
        <attr name="tvTextColor" format="color" />
        <!--标题文字大小-->
        <attr name="tvTitleSize" format="dimension" />
        <!--是否显示回退按钮-->
        <attr name="tvShowBack" format="boolean" />
        <!--是否添加状态栏高度-->
        <attr name="tvAddStatusBarHeight" format="boolean" />
        <!--背景颜色-->
        <attr name="tvBgColor" format="color" />
        <!--返回按钮图-->
        <attr name="tvBackImg" format="reference" />
    </declare-styleable>
    <!--viewpager懒加载-->
    <declare-styleable name="LazyViewPager">
        <attr name="lazy_item_offset" format="float" />
    </declare-styleable>
    <declare-styleable name="BadgeView">
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="badgeTextColor" format="color" />
        <attr name="badge" format="integer" />
    </declare-styleable>

    <!-- 刷新布局  -->
    <declare-styleable name="MaterialRefreshLayout">
        <!--是否覆盖子控件(浮在子控件上层) 默认覆盖-->
        <attr name="isOverlay" format="boolean" />
        <!--是否启用下拉刷新 默认启用-->
        <attr name="refreshEnable" format="boolean" />
        <!--是否启用上拉加载 默认禁用-->
        <attr name="loadMoreEnable" format="boolean" />
    </declare-styleable>

    <!-- 刷新布局  -->
    <declare-styleable name="XRecyclerView">
        <!--是否覆盖子控件(浮在子控件上层) 默认覆盖-->
        <attr name="isOverlay" />
        <!--是否启用下拉刷新 默认启用-->
        <attr name="refreshEnable" />
        <!--是否启用上拉加载 默认禁用-->
        <attr name="loadMoreEnable" />
        <attr name="layoutManager" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="isShowArrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PayPasswordView">
        <attr name="ppv_num" format="integer" />
        <!-- 边框间距 -->
        <attr name="ppv_borderGap" format="dimension" />
        <!-- 横线高度 -->
        <attr name="ppv_lineHeight" format="dimension" />
        <!-- 格子大小 -->
        <attr name="ppv_size" format="dimension" />
        <attr name="ppv_lineColor" format="color" />
        <!-- 密文样式 -->
        <attr name="ppv_dot" format="string" />
        <attr name="ppv_dotColor" format="color" />
        <attr name="ppv_autoClear" format="boolean" />
        <attr name="ppv_isShowNumber" format="boolean" />
    </declare-styleable>
    <!-- 仿 ios 开关按钮 -->
    <declare-styleable name="SwitchButton">
        <!-- 是否选中 -->
        <attr name="android:checked" />
        <!-- 是否禁用 -->
        <attr name="android:enabled" />
        <!-- 是否打开圆圈阴影 -->
        <attr name="shadowOpen" format="boolean" />
        <!-- 开启状态背景色 -->
        <attr name="openColor" format="color" />
        <!-- 开启状态圆圈颜色 -->
        <attr name="openCircleColor" format="color" />
        <!-- 开启状态圆圈描边色 -->
        <attr name="openCircleStrokeColor" format="color" />
        <!-- 关闭状态描边色 -->
        <attr name="closeStrokeColor" format="color" />
        <!-- 关闭状态圆圈描边色 -->
        <attr name="closeCircleStrokeColor" format="color" />
        <!-- 关闭状态背景色 -->
        <attr name="closeColor" format="color" />
        <!-- 关闭状态圆圈颜色 -->
        <attr name="closeCircleColor" format="color" />
        <!-- 禁用状态背景色 -->
        <attr name="disableColor" format="color" />
        <!-- 禁用状态圆圈颜色 -->
        <attr name="disableCircleColor" format="color" />
        <!-- 圆圈阴影色 -->
        <attr name="shadowCircleColor" format="color" />
    </declare-styleable>
    <!--指示器控件-->
    <declare-styleable name="IndicatorView">
        <attr name="indicatorCount" format="integer" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="indicatorBorderWidth" format="dimension" />
        <attr name="indicatorSpace" format="dimension" />
        <attr name="android:textColor" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorSelectPosition" format="integer" />
        <attr name="indicatorSelectColor" format="color" />
        <attr name="indicatorEnableSwitch" format="boolean" />
        <attr name="indicatorViewPagerId" format="reference" />
        <attr name="indicatorFillMode">
            <enum name="letter" value="0" />
            <enum name="number" value="1" />
            <enum name="none" value="2" />
        </attr>
    </declare-styleable>
</resources>