<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/open_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开" />

    <com.i56s.ktlib.views.PayPasswordView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:ppv_borderGap="5dp"
        app:ppv_isShowNumber="false"
        app:ppv_lineColor="#ff0000"
        app:ppv_lineHeight="1dp"
        app:ppv_num="5" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存" />

    <Button
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取" />

    <com.i56s.ktlib.views.SwitchButton
        android:id="@+id/switchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:closeCircleStrokeColor="#BFBFBF"
        app:closeColor="#DFDFDF"
        app:closeStrokeColor="#E3E3E3"
        app:disableColor="#BFBFBF"
        app:openCircleStrokeColor="#2CBCB7"
        app:openColor="#32D8D2"
        app:shadowCircleColor="#333333"
        app:shadowOpen="true" />
</LinearLayout>